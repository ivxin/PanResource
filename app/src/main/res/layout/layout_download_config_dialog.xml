<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp">

        <com.qmuiteam.qmui.widget.textview.QMUILinkTextView
            android:id="@+id/tv_qbittorrent"
            android:text="qBittorrent\n未实现,推荐 [打开磁链] with https://github.com/lgallard/qBittorrent-Controller"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableRow>

            <TextView
                android:text="server"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_qbt_server"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="http://192.168.0.1:1000"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="username"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_qbt_user"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="admin"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="password"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_qbt_pass"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="***"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TextView
            android:layout_marginTop="20dp"
            android:text="aria2 RPC(未实现)"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableRow>

            <TextView
                android:text="server"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_aria_server"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="http://192.168.0.1:6800/jsonrpc"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="PRC key"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_aria_key"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="***"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TextView
            android:layout_marginTop="20dp"
            android:text="μTorrent(未实现)"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableRow>

            <TextView
                android:text="server"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_miu_server"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="http://192.168.0.1:16800/gui/"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow>


            <TextView
                android:text="username"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_miu_user"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="admin"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="password"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_miu_pass"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="***"
                android:textColor="@color/colorPrimary" />

        </TableRow>


    </TableLayout>
</ScrollView>

